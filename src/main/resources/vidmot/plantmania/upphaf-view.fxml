            fx:controller="vidmot.plantmania.UpphafController">
    <children>
        <Label layoutX="308.0" layoutY="60.0" text="Plantmania">
            <font>
                <Font size="28.0"/>
            </font>
        </Label>
        <Label layoutX="329.0" layoutY="107.0" text="Innskráning">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label layoutX="226.0" layoutY="177.0" text="Notendanafn:"/>
        <Label layoutX="226.0" layoutY="220.0" text="Lykilorð:"/>
